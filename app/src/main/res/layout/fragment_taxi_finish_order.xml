<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.taxiClient.TaxiFinishOrderFragment">

    <org.osmdroid.views.MapView
        android:id="@+id/mapClient"
        tilesource="Mapnik"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/button_rounded">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Замовлення виконано"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/button_rounded">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Оцінка водію"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/ivCarPoint1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/carpoint"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <ImageView
                    android:id="@+id/ivCarPoint2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/carpoint"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <ImageView
                    android:id="@+id/ivCarPoint3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/carpoint"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <ImageView
                    android:id="@+id/ivCarPoint4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/carpoint"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <ImageView
                    android:id="@+id/ivCarPoint5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/carpoint"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btnMarkOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/button_rounded_green"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Оцінити поїздку"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>