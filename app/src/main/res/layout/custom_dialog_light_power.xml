<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:foregroundGravity="bottom"
    app:layout_anchorGravity="">

    <Button
        android:id="@+id/btn_cancel_light_power"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Відмінити"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_dialog_light_power" />

    <Button
        android:id="@+id/btn_ok_light_power"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:text="ОК"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_cancel_light_power" />

    <TextView
        android:id="@+id/tv_count_light_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="50 %"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sb_light_power"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_count_light_power"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:max="100"
        android:outlineAmbientShadowColor="#000"
        android:outlineSpotShadowColor="#000"
        android:progress="50"
        android:thumbTint="#00BFA5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_count_light_power" />

    <ImageView
        android:id="@+id/iv_dialog_light_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_light_power"
        app:srcCompat="@drawable/sun_smiling" />

</android.support.constraint.ConstraintLayout>