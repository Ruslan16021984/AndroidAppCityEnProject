<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ui.discount.DiscountFragment"
    android:background="#3D3D3D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/iv_item_discount_description"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_weight="0.4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/city"
                    />

            </android.support.v7.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tv_name_goods_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="0.9"
                            android:text="Назва товару"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_mark_description"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:paddingTop="10dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            app:srcCompat="@drawable/mark" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_price_and_discount_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:text="Ціна і знижка"
                            android:layout_gravity="left"
                            android:textColor="@color/colorPrimary"
                            android:textSize="22sp" />
                        <TextView
                            android:id="@+id/tv_last_time_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:paddingRight="5sp"
                            android:text="Часу"
                            android:layout_gravity="right|bottom"
                            android:textColor="#DA0000"
                            android:textSize="14sp" />

                    </FrameLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:paddingTop="16dp">

                        <TextView
                            android:id="@+id/tv_description_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:paddingRight="16dp"
                            android:text="Опис товару"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />
                    </ScrollView>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
